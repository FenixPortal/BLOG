#page_wrapper
  %h2 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .form-group
      = f.label :email
      %br
      = f.email_field :email, autofocus: true, class: "form-control", required: true
    .form-group
      = f.label :password
      %br
      = f.password_field :password, autofocus: true, class: "form-control", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
    .form-group
      = f.label :password_confirmation
      %br
      = f.password_field :password_confirmation, required: true
    .form-actions
      = f.submit "Sign up", class: "btn btn-lg btn-primary"
  = render "devise/shared/links"
